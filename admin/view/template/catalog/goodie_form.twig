{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-goodie" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-goodie" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-image" data-toggle="tab">{{ tab_image }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              
              <div class="tab-content" >
                <div class="tab-pane" id="language" >
                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="nom_lot" value="{{ goodie.nom_lot }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                      {% if error_name %}
                      <div class="text-danger">{{ error_name }}</div>
                      {% endif %} </div>
                  </div>
				  
				  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-ref_lot">{{ entry_ref_lot }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="ref_lot" value="{{ goodie.ref_lot }}" placeholder="{{ entry_ref_lot }}" id="input-ref_lot" class="form-control" />
                   </div>
                  </div> 
				  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-points">{{ entry_points }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="points" value="{{ goodie.points }}" placeholder="{{ entry_points }}" id="input-points" class="form-control" />
                   </div>
                  </div>
				  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-stock">{{ entry_stock }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="stock" value="{{ goodie.stock }}" placeholder="{{ entry_stock }}" id="input-stock" class="form-control" />
                   </div>
                  </div>
				  <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="status" id="input-status" class="form-control">
                    

                    {% if status %}

                    
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    

                    {% else %}

                    
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    

                    {% endif %}

                  
                  </select>
                </div>
              </div>
			  
			  <div class="form-group">
                <label class="col-sm-2 control-label" for="input-couleur">{{ column_couleur }}</label>
                <div class="col-sm-10">
                  <select name="id_couleur" id="input-couleur" class="form-control">
                    {% for couleur in couleurs %}
				<option value="{{couleur.idcouleur}}" {% if couleur.idcouleur == goodie.id_couleur %} selected {% endif %} >{{couleur.nom_couleur}}</option>
					{% endfor %}
         
                  
                  </select>
                </div>
              </div>
			  <div class="form-group">
                <label class="col-sm-2 control-label" for="input-type">{{ column_type }}</label>
                <div class="col-sm-10">
                  <select name="id_type" id="input-type" class="form-control">
                    {% for type in types %}
				<option value="{{type.idtype_lot}}" {% if type.idtype_lot == goodie.id_type %} selected {% endif %} >{{type.nom_type}}</option>
					{% endfor %}
         
                  
                  </select>
                </div>
              </div>
			  
			  <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sexe">{{ column_sexe }}</label>
                <div class="col-sm-10">
                  <select name="id_sexe" id="input-sexe" class="form-control">
                    {% for sexe in sexes %}
				<option value="{{sexe.idsexe}}" {% if sexe.idsexe == goodie.id_sexe %} selected {% endif %} >{{sexe.nom_sexe}}</option>
					{% endfor %}
         
                  
                  </select>
                </div>
              </div> 
			  
			  <div class="form-group">
                <label class="col-sm-2 control-label" for="input-taille">{{ column_taille }}</label>
                <div class="col-sm-10">
                  <select name="id_taille" id="input-taille" class="form-control">
                    {% for taille in tailles %}
				<option value="{{taille.idtaille}}" {% if taille.idtaille == goodie.id_taille %} selected {% endif %} >{{taille.nom_taille}}</option>
					{% endfor %}
         
                  
                  </select>
                </div>
              </div>
				  
				  
                  
                </div>
               </div>
            </div>
          
            <div class="tab-pane" id="tab-image">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">{{ entry_image }}</td>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="text-left"><a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                        <input type="hidden" name="image" value="{{ image }}" id="input-image" /></td>
                    </tr>
                  </tbody>
                </table>
              </div>
             
            </div>
			
                
        </form>
      </div>
    </div>
  </div>
  <link href="view/javascript/codemirror/lib/codemirror.css" rel="stylesheet" />
  <link href="view/javascript/codemirror/theme/monokai.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/codemirror/lib/codemirror.js"></script> 
  <script type="text/javascript" src="view/javascript/codemirror/lib/xml.js"></script> 
  <script type="text/javascript" src="view/javascript/codemirror/lib/formatting.js"></script> 
  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script> 
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>  
  
